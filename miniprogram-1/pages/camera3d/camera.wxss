.container{
    position:absolute;
    width:100%;
    height:100%;
}

.camera1{
    position:absolute;
    z-index: 1;
    height:100%;
    width:100%;
}
#capture {
  position: absolute;
  left: 750rpx;
}
.canvas1{
    position:absolute;
    z-index: 2;
    height:100%;
    width:100%;
}

.cover-view{
    color:#00B0CF;
    padding:15px;
    text-align:center;
    position:absolute;
    width:100%;
    bottom:50px;
}


#overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(63, 63, 63, 0.6);
  z-index: 30;
}


.primary-button {
  width: 540rpx;
  height: 112rpx;
  margin-top: 22rpx;
  text-align: center;

  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC, serif;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 112rpx;
}

#overlay-top {
  position: absolute;
  margin: 60rpx 44rpx 0 54rpx;
  left: 0;
  right: 0;
}

#title {
  position: absolute;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC, serif;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 46rpx;
}

#overlay-bottom {
  position: absolute;
  width: 540rpx;
  left: 0;
  right: 0;
  bottom: 0;
  margin: 0 auto;
}

#loading {
  position: absolute;
  width: fit-content;
  height: fit-content;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  z-index: 40;
}